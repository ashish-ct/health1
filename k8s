apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-app1.0
spec:
  replicas: 3
  selector:
    matchLabels:
      app: my-app1.0
  template:
    metadata:
      labels:
        app: my-app1.0
    spec:
      containers:
        - name: my-app1.0
          image: ashish5990/ my-app.4
          ports:
            - containerPort: 8080
          env:
            - name: PORT
              value: "8080"
---
apiVersion: v1
kind: Service
metadata:
  name: my-app.4
spec:
  type: LoadBalancer
  ports:
    - port: 80
      targetPort: 8080
  selector:
    app: my-app.4
